<li>
    <a>
        <div>
            <strong>{{model.name}}</strong><i class="fa fa-{{model.statusFormated}} fa-fw"></i>
            <span class="pull-right text-muted">
                <em>{{model.ip}}</em>
            </span>
        </div>
        <div>{{model.trackName}}</div><input id="{{model.name}}" type="range" min="0" max="1.2" step="0.1" value="{{model.volume}}" {{action "onVolumeUpdate" model}}/>
        <div>{{input type="checkbox" name="isActive" checked=model.isActive}} Activated</div>
    </a>
</li>
<li class="divider"></li>
