<tr {{action 'click' model}} class="">
  <td>
    {{#if model.isActive}}
      {{#if audio_player.isPlaying}}
        <i class="fa fa-play fa-fw"></i>
      {{else if audio_player.isPaused}}
        <i class="fa fa-pause fa-fw"></i>
      {{else if audio_player.isStopped}}
        <i class="fa fa-stop fa-fw"></i>
      {{/if}}
    {{/if}}
  </td>
  <td>
    <img src="{{model.thumbnail}}" alt="logo" width=35 height=35/>
  </td>
  <td>{{model.name}}</td>
  <td>{{model.artist}}</td>
  <td>{{model.album}}</td>
  <td>{{model.durationFormated}}</td>
</tr>
